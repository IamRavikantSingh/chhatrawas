<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/complain_mess">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#d60606"
            android:layout_height="300dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="65dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/ic_restaurant_cutlery_circular_symbol_of_a_spoon_and_a_fork_in_a_circle"/>
            <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/mess_complainbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MESS COMPLAINT"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#5ba4ba"
            android:id="@+id/complain_hostel"
            android:layout_height="300dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="75dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/ic_hostel"
                android:layout_marginBottom="20dp"

                />
            <TextView

                android:id="@+id/hostel_complain"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mess_complainbtn"
                android:text="HOSTEL COMPLAINT"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:background="#5ba4ba"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/miscllenious"
            android:layout_weight="1"
            android:background="#1fb451">
            <ImageView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_clipboard"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/miscellenious"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_below="@id/hostel_complain"
                android:text="MISCELLENIOUS"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/LeaveForm"
            android:layout_weight="1"
            android:background="#e1ae18">
            <ImageView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_airplane"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/leave"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_below="@id/hostel_complain"
                android:text="LEAVE FORM"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>