<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"


    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_highlights"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="8dp"
        android:outlineAmbientShadowColor="#ffffff"
        android:outlineSpotShadowColor="#ffffff"

        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:id="@+id/rel_lay_highlights"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:background="#ffffff"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/highlights_card_imageView"
                />

            <TextView
                android:id="@+id/tv_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="101dp"
                android:layout_marginBottom="8dp"
                android:text="Today"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/mess_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="101dp"
                android:layout_marginBottom="8dp"
                android:text="Arya Mess"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_highlight_dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/tv_today"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="23sp"
                android:text="Monday"
                android:textColor="#ffffff"
                android:textSize="9sp" />




        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>